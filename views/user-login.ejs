	<!-- <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous"> -->
	<title>Login My Notes</title>

</head>
<body>
	
	<div class="container">
		<!-- Login container -->
		<div class="login-container">
			<div class="icon-user"> 
				<i class="fas fa-user fa-lg fa-5x text-success"></i>
			</div>
			<h2 class="text-success text-center">Login Account</h2>
			

			<!-- Massage from server -->
			<div class="msg">

				<% if( success_msg.length > 0 ) {%>
					<div class="alert alert-dismissible alert-success">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<h4 class="alert-heading">Success!</h4>
						<p class="mb-0"><%= success_msg %></p>
					</div>			
				<% } %>

				<% if( error.length > 0 ) { %>
						<div class="alert alert-dismissible alert-danger">
							<button type="button" class="close" data-dismiss="alert">&times;</button>
							<h4 class="alert-heading">Error!</h4>
							<p class="mb-0"><%= error %></p>
						</div>			
				<% } %>

				<% if( error_msg.length > 0 ) {%>
					<div class="alert alert-dismissible alert-danger">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<h4 class="alert-heading">Error!</h4>
						<p class="mb-0"><%= error_msg %></p>
					</div>			
				<% } %>
			</div>

			<!-- Login form -->
			<div class="login-form">
	 			<form action="/login" method="post">
					<div class="form-group">
				    	<label for="exampleInputEmail1">Email address</label>
				    	<div class="input-group">
				    		<div class="input-group-prepend">
				    			<div class="input-group-text"><i class="fas fa-envelope-square text-success fa-2x"></i></div>
 				    		</div>
						    <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Masukan Email Anda">
				    	</div>
				    </div>
				        <div class="form-group">
			        	<label for="password">Password</label>
			            <div class="input-group">
			            	<div class="input-group-prepend">
			                	<div class="input-group-text"><i class="fas fa-unlock-alt text-success fa-2x"></i></div>
			              	</div>
			              	<input type="password" class="form-control" placeholder="Masukan Password Anda" name="password" id="password">
			            </div>
			        </div>
					<div class="login-button">
						<button type="submit" class="btn btn-outline-success">LOGIN</button>
					</div><br>
					<div class="lead"><p>Belum Punya Akun? <a href="/register">Daftar Akun</a></p></div>
					<input type="hidden" name="_csrf" value="<%= csrfToken %>">				
				</form>				
			</div>

 		</div>
	</div>

	<!-- Footer -->
	<footer class="page-footer font-small cyan bg-success">
		<!-- Footer Elements -->
	  	<div class="container">
	    	<!-- Grid row-->
	    	<div class="row">
	      		<!-- Grid column -->
		      	<div class="col-md-12 py-5">
			        <div class="mb-5 flex-center">
			        	<!-- Facebook -->
				        <a class="fb-ic" href="https://www.facebook.com/profile.php?id=100010536482965">
				        	<i class="icon-footer fab fa-facebook-f fa-sm white-text mr-md-5 mr-3 fa-2x"> </i>
				        </a>
			          	<!--Linkedin -->
			          	<a class="li-ic" href="https://www.linkedin.com/in/rendy-dendimara-133934196">
			            	<i class="icon-footer fab fa-linkedin-in fa-sm white-text mr-md-5 mr-3 fa-2x"> </i>
			          	</a>
			          	<!--Instagram-->
			          	<a class="ins-ic" href="https://www.instagram.com/R3ndydinar">
			            	<i class="icon-footer fab fa-instagram fa-sm white-text mr-md-5 mr-3 fa-2x"> </i>
			         	</a>
			         	 <!--Github-->
			          	<a class="pin-ic" href="https://github.com/Rendydinar">
			            	<i class="icon-footer fab fa-github fa-sm white-text fa-2x"> </i>
			         	 </a>
			        </div>
		      	</div>
	      	<!-- Grid column -->
	    	</div>
	    <!-- Grid row-->
	  	</div>
	  	<!-- Footer Elements -->
	  	<!-- Copyright -->
	  	<div class="footer-copyright text-center py-3">Â© 2019 Copyright My Notes Team </div>
	  	<!-- Copyright -->
