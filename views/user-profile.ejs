		        	<a class="nav-link" href="/user/logout"><i class="fas fa-sign-out-alt fa-lg" data-toggle="tooltip" title="Logout"> Logout</i></a>
		      	</li>
	    	</ul>
	  	</div>
	</nav> <br><br><br>
	
	<!-- photo-profile -->
	<div class="profile-label">
		<h1 class="text-success">Profile Account</h1>		
		<div class="img-profile">
			<div class="img">
				<img data-toggle="modal" data-target="#photoProfile" src="<%= img_profile_url %>" alt="photo-profile" class="img-fluid img-thumbnail">			
			</div>
 			<span><i class="fas fa-camera fa-lg fa-2x text-success" data-toggle="modal" data-target="#update-photo-profile"></i></span>
		</div>
	</div>

	<!-- modal photo-profile -->
	<div class="modal" id="photoProfile">
 	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title">Photo Profile</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
			<img src="<%= img_profile_url %>" alt="photo-profile" class="img-fluid img-thumbnail img-modal-profile">
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	      </div>
	    </div>
 	</div>	

	<!-- modal-update-photo-profile -->
	<div class="modal" id="update-photo-profile">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title">Update Photo Profile</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	 	<!-- form-update-photo-profile  -->

		<form action="/user/update-user-photo-profile" method="post" enctype="multipart/form-data">    
	    	<div class="modal-body"> 
	  			<div class="form-group">
				    <div class="input-group mb-3">
				      <div class="custom-file">
				        <input type="file" name="file_image_profile_url" class="custom-file-input" accept="image/*" id="inputGroupFile02">
				        <input type="hidden" name="_csrf" value="<%= csrfToken %>">				
				        <label class="custom-file-label" for="inputGroupFile02" >Cari file...</label>
				      </div>
				    </div>
				  </div>				
	        </div>
		    <div class="modal-footer">
		    	<button type="submit" class="btn btn-outline-success">Update</button>
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
		    </div>
	    </form>
	    </div>
	  </div>
	</div>

	<!-- msgError -->
	<div class="msgErr">
		<% if( error_msg.length > 0 ) {%>
			<div class="alert alert-dismissible alert-danger">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<h4 class="alert-heading">Error!</h4>
				<p class="mb-0"><%= error_msg %></p>
			</div>			
		<% } %>
	</div>

	<!-- daftar informasi profile -->
	<div class="container">
		<br><br>
		<!-- modal nama -->
		<label>Nama Pengguna</label>		
	    <div class="info-user-profile alert alert-dismissible fade show text-white" role="alert"><%= name %>
	    <div  data-target="#ubahNama" data-toggle="modal" class="fas fa-pen fa-lg " > </div>    
	        <div class="modal" id="ubahNama">
	            <div class="modal-dialog" role="document">
	                <div class="modal-content">
	                    <div class="modal-header">
	                        <h5 class="modal-title text-white">Ubah Nama</h5>
	                        <button type="botton" class="close" data-dismiss="modal" aria-label="Close">
	                           <span aria-hidden="true">&times;</span>
	                        </button>
	                    </div>
	                    <div class="modal-body">
	                        <!-- form ubah nama account -->                                   
	                        <form action="/user/update-user-name" method="POST">
	                            <div class="form-group">
	                                <input type="text" class="form-control" name="name" value="<%= name %>"  >
							        <input type="hidden" name="_csrf" value="<%= csrfToken %>">				
	                            </div>
	                            <div class="modal-footer">
	                                <button type="submit" class="btn btn-outline-success">UBAH</button>
	                            </div>
	                        </form>
	                    </div>
	                </div>
	            </div>                                              
	        </div>
	    </div>


		<!-- modal password -->
		<label>Password</label>
	    <div class="alert info-user-profile alert-dismissible fade show  text-white" role="alert">Password  : Password pengguna	
	    <div  data-target="#ubahPassword" data-toggle="modal" class="fas fa-pen fa-lg " > </div>    
	        <div class="modal" id="ubahPassword">
	            <div class="modal-dialog" role="document">
	                <div class="modal-content">
	                    <div class="modal-header">
	                        <h5 class="modal-title text-white">Ubah Password</h5>
	                        <button type="botton" class="close" data-dismiss="modal" aria-label="Close">
	                           <span aria-hidden="true">&times;</span>
	                        </button>
	                    </div>
	                    <div class="modal-body">
	                        <!-- form ubah nama account -->                                   
	                        <form action="/user/update-user-password" method="POST">
	                            <div class="form-group">
	                                <input type="text" class="form-control" name="name" value="Nama Pengguna" required>
							        <input type="hidden" name="_csrf" value="<%= csrfToken %>">				
	                            </div>
	                            <div class="modal-footer">
	                                <button type="submit" class="btn btn-outline-success">UBAH</button>
	                            </div>
	                        </form>
	                    </div>
	                </div>
	            </div>                                              
	        </div>
	    </div>
		
		<!-- modal bio -->
		<label>Bio</label>		
	    <div class="alert info-user-profile alert-dismissible fade show  text-white" role="alert"><%= bio %>	
	    <div  data-target="#ubahBio" data-toggle="modal" class="fas fa-pen fa-lg " > </div>    
	        <div class="modal" id="ubahBio">
	            <div class="modal-dialog" role="document">
	                <div class="modal-content">
	                    <div class="modal-header">
	                        <h5 class="modal-title text-white">Ubah Bio</h5>
	                        <button type="botton" class="close" data-dismiss="modal" aria-label="Close">
	                           <span aria-hidden="true">&times;</span>
	                        </button>
	                    </div>
	                    <div class="modal-body">
	                        <!-- form ubah nama account -->                                   
	                        <form action="/user/update-user-bio" method="POST">
	                            <div class="form-group">
	                                <input type="text" class="form-control" name="bio" value="<%= bio %>" required>
							        <input type="hidden" name="_csrf" value="<%= csrfToken %>">				
	                            </div>
	                            <div class="modal-footer">
	                                <button type="submit" class="btn btn-outline-success">UBAH</button>
	                            </div>
	                        </form>
	                    </div>
	                </div>
	            </div>                                              
	        </div>
	    </div>
		
		<!-- modal hobby -->
		<label>Hobby</label>
	    <div class="alert info-user-profile alert-dismissible fade show  text-white" role="alert"><%= hobby %>	
	    <div  data-target="#ubahHobby" data-toggle="modal" class="fas fa-pen fa-lg " > </div>    
	        <div class="modal" id="ubahHobby">
	            <div class="modal-dialog" role="document">
	                <div class="modal-content">
	                    <div class="modal-header">
	                        <h5 class="modal-title text-white">Ubah Hobby</h5>
	                        <button type="botton" class="close" data-dismiss="modal" aria-label="Close">
	                           <span aria-hidden="true">&times;</span>
	                        </button>
	                    </div>
	                    <div class="modal-body">
	                        <!-- form ubah nama account -->                                   
	                        <form action="/user/update-user-hobby" method="POST">
	                            <div class="form-group">
	                                <input type="text" class="form-control" name="hobby" value="<%= hobby %>" required>
							        <input type="hidden" name="_csrf" value="<%= csrfToken %>">				
	                            </div>
	                            <div class="modal-footer">
	                                <button type="submit" class="btn btn-outline-success">UBAH</button>
	                            </div>
	                        </form>
	                    </div>
	                </div>
	            </div>                                              
	        </div>
	    </div>
	</div>
	 
